<functions>
  <function name="include_directories">
    <arguments>
      <variadic>
        <argument name="directories" type="string"/>
      </variadic>
      <keyword>
        <argument name="is_system" type="bool" default="false"/>
      </keyword>
    </arguments>
  </function>
  <function name="files">
    <arguments>
      <variadic>
        <argument name="files" type="string" convert="file"/>
      </variadic>
    </arguments>
  </function>
  <function name="assert">
    <arguments>
      <positional>
        <argument name="condition" type="bool"/>
      </positional>
      <optional>
        <argument name="message" type="string" default='""'/>
      </optional>
    </arguments>
  </function>
</functions>
